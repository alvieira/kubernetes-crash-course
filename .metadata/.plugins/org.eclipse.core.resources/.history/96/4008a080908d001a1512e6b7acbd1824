apiVersion: extensions/v1beta1
kind: Deployment
metadata:  
  labels:
    app: hello-world-rest-api
    version: v1
  name: hello-world-rest-api-v1
  namespace: default
spec:  
  replicas: 2
  minReadySeconds: 45  
  selector:
    matchLabels:
      app: hello-world-rest-api
      version: v1      
  strategy:
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
    type: RollingUpdate
  template:
    metadata:      
      labels:
        app: hello-world-rest-api
        version: v1
    spec:
      containers:
      - image: alvieira/hello-world-rest-api:0.0.1-SNAPSHOT
        imagePullPolicy: IfNotPresent
        name: hello-world-rest-api      
      restartPolicy: Always      
      terminationGracePeriodSeconds: 30
---
apiVersion: v1
kind: Service
metadata:  
  labels:
    app: hello-world-rest-api
  name: hello-world-rest-api
  namespace: default  
spec:
  clusterIP: 10.48.1.42  
  ports:
  - nodePort: 32446
    port: 8080
    protocol: TCP
    targetPort: 8080
  selector:
    app: hello-world-rest-api
  sessionAffinity: None
  type: LoadBalancer
